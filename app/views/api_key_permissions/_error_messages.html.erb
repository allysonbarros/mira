<% if @permission.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      There is <%= pluralize(@permission.errors.count, "error") %>.
    </div>
    <ul>
    <% @permission.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
