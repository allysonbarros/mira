<% provide(:title, 'API Keys') %>
<h4>API Keys</h4>

<% if user_signed_in? %>
  <%= link_to "New API Key", new_user_api_key_path, :class => "btn btn-primary" %>
  <br /><br />
<% end %>
<%= paginate @keys %>
<table class="table">
  <thead>
    <th>Description</th>
    <th>Key</th>
    <% if user_signed_in? %>
      <th> </th>
      <th> </th>
      <th> </th>
    <% end %>

  </thead>
  <% @keys.each do |k| %>
    <tr>
      <td><%= k.description %></td>
      <td><%= k.token %></td>
      <% if user_signed_in? %>
        <td><%= link_to "Permissions", user_api_key_api_key_permissions_path(@user,k), :class => "btn btn-xs btn-info" %></td>
        <td><%= link_to "Edit API Key", edit_user_api_key_path(@user,k), :class => "btn btn-xs btn-info" %></td>
        <td><%= link_to "delete", [@user, k] , method: :delete,
                        data: { confirm: "You sure?" }, :class => "btn btn-xs btn-danger" %></td>
      <% end %>
    </tr>
  <% end %>
</table>
<%= paginate @keys %>
