<!-- <h3>Project Details</h3> -->
<table class="table">
  <tbody>
    <tr>
      <td><strong>ID</strong></td>
      <td><%= @project.id %></td>
    </tr>
    <tr>
      <td><strong>Name</strong></td>
      <td><%= @project.name %></td>
    </tr>
    <tr>
      <td><strong>Description</strong></td>
      <td><%= @project.description %></td>
    </tr>
    <tr>
      <td><strong>API details</strong></td>
      <td>
        <a href="/projects/<%= @project.id %>/api-details">/projects/<%= @project.id %>/api-details</a><br />
      </td>
    </tr>
    <tr>
      <td><strong>Datapackage</strong></td>
      <td>
        <% if @project.datapackage.present? %>
          <%#= link_to @project.datapackage.datapackage_file_name, @project.datapackage.datapackage.url %>
          <a href="/projects/<%= @project.id %>/datapackage"><%= @project.datapackage.datapackage_file_name %></a>
          , uploaded <%= @project.datapackage.created_at.strftime("%FT%R") %>
        <% else %>
          <code>Upload a datapackage.json file! <%= link_to "See here", edit_project_path(@project) %></code>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
