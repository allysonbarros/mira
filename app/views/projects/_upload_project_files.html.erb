<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@project, url: {action: "upload_ds"} , method: "post", :html => { multipart: true }) do |f| %>

      <div class="control-group">
        <%= f.label :datasources, :class => 'control-label' %>
        <div class="controls">
        <!-- In relation to multiple file upload, this is the important part -->
        <%= file_field_tag "datafiles[]", type: :file, multiple: true %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit "Add files", :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    projects_path, :class => 'btn btn-mini' %>
      </div>

    <% end %>
  </div>
</div>